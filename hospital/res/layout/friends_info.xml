<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <include 
        layout="@layout/title_activity"
        />
  <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
      android:background="@drawable/bg_input_single"
      android:gravity="center_vertical">
    <ImageView
        android:id="@+id/friend_avater"
        android:layout_height="@dimen/avatar_height"
        android:layout_width="@dimen/avatar_width"
        android:src="@drawable/default_avatar"
        android:layout_marginLeft="8dp"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        >
        <TextView 
            android:id="@+id/friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="123"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView 
            android:text="asd"
            android:id="@+id/friends_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_input_top"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账        号"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="15dp"/>
    <TextView 
        android:id="@+id/friend_id"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1223"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="8dp" />
     <TextView 
        android:id="@+id/friend_more"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:layout_marginRight="8dp" />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_input_top"
    android:gravity="center_vertical"
    android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电        话"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="15dp"
        android:autoLink="phone"/>
    <TextView 
        android:id="@+id/friend_phone"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1223"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="8dp" />
     <TextView 
        android:id="@+id/friend_more_1"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:layout_marginRight="8dp" />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_input_top"
    android:gravity="center_vertical"
    android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等       级"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="15dp"/>
    <TextView 
        android:id="@+id/friend_level"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1223"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="8dp" />
     <TextView 
        android:id="@+id/friend_more_2"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:layout_marginRight="8dp" />
     
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_input_single"
    android:gravity="center_vertical"
    android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="15dp"/>
    <TextView 
        android:id="@+id/friend_sign"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1223"
        android:textSize="@dimen/medium_text"
        android:layout_marginLeft="8dp" />
     <TextView 
        android:id="@+id/friend_more_3"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:layout_marginRight="8dp" />
</LinearLayout>
</LinearLayout>
