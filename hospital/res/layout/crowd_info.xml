<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <include layout="@layout/title_activity"/>  
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_input_single"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="10dp">
	    <TextView 
	        android:id="@+id/crowd_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="群描述"
	        android:textSize="@dimen/medium_text"
	        android:textColor="@color/black"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"/>
	    <TextView 
	        android:id="@+id/crowd_des_info"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:singleLine="false"
	        android:text="nihao"
	        android:textSize="@dimen/medium_text"
	        android:textColor="@color/black"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"/>
	</LinearLayout>
	
	 <com.example.ehs.widget.My2TextButton 
	       android:id="@+id/crowd_members"
	       android:layout_width="match_parent"
	       android:layout_height="60dp"
	       android:background="@drawable/bg_input_top"
	       android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="10dp"/>
	  <View 
		android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/divider_input"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>	   
	 <com.example.ehs.widget.My2TextButton
         android:id="@+id/crowd_invited"
         android:layout_width="fill_parent"
         android:layout_height="60dp"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:background="@drawable/bg_input_bottom"/>
	  <com.example.ehs.widget.My2TextButton 
	       android:id="@+id/crowd_my_info"
	       android:layout_width="match_parent"
	       android:layout_height="60dp"
	       android:background="@drawable/bg_input_single"
	       android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="10dp"/>
</LinearLayout>
