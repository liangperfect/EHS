<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:text="收货地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_input_single"
        android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/receive_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="xx医院住院部xx房间xx床"
	        android:textColor="@color/black"
	        android:textSize="@dimen/medium_text"
	        android:layout_marginLeft="8dp"
	        android:layout_weight="1"
	        android:layout_marginRight="8dp"
	        />
	    <Button 
	        android:id="@+id/change_address"
	        android:layout_width="60dp"
	        android:layout_height="40dp"
	        android:text="修改"
	        android:textColor="@color/black"
	        android:textSize="@dimen/medium_text"
	        android:layout_marginRight="8dp"
	        android:background="@drawable/bg_submit_btn"/>
    </LinearLayout>
	<RelativeLayout
	    android:id="@+id/change_address_layout" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:visibility="gone"
	    >
	    <Button
	        android:id="@+id/choose_address"
	        android:text="选择收货地址"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/medium_text"
	        android:textColor="@color/red"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@android:color/transparent"/>

	    <Button
	        android:id="@+id/input_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@android:color/transparent"
	        android:text="输入收货地址"
	        android:textColor="@color/red"
	        android:textSize="@dimen/medium_text" />
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/choose_address_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:visibility="gone">
	    <Spinner 
	        android:id="@+id/spinner_1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	     <Spinner 
	        android:id="@+id/spinner_2"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	     <Spinner 
	        android:id="@+id/spinner_3"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	    </LinearLayout>
	    <EditText 
	        android:id="@+id/input_new_address"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:hint="请输入你的地址"
	        android:textColor="@color/black"
	        android:textSize="@dimen/medium_text"
	        android:background="@android:drawable/editbox_background"
	        android:visibility="gone"/>
	    <RelativeLayout
	        android:id="@+id/address_bt"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="10dp"
	        android:visibility="gone">
	    <Button 
	        android:id="@+id/save_address"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:text="保存新地址"
	        android:textColor="@color/black"
	        android:textSize="@dimen/medium_text"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/bg_submit_btn"/>
	    <Button 
	        android:id="@+id/quit_address"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:text="取消新地址"
	        android:textColor="@color/black"
	        android:textSize="@dimen/medium_text"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/bg_submit_btn"/>
	    </RelativeLayout>
</LinearLayout>
